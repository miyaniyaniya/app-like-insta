<style type="text/css">
  .comments{
    width: 100%;
    max-width: 455px;
    background-color: white;
    border: solid 1px #ccc;
  }
  .comment{
    padding: 10px;
    width: 100%;
    max-width: 455px;
    border-bottom: 1px solid #e6e6e6;
  }

  .picture-box{
    margin-bottom: 40px;
  }
</style>

<div class="row" style="">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <!-- <p id="notice"><%= notice %></p> -->

    <%= render partial: 'form' %>
    <br/>

    <% @pictures.order("id desc").each do |picture| %>
      <div class="picture-box">
        <%= image_tag(picture.image_url, width: "455px", height: "455px") %>
        <%# <%= link_to '変更する', edit_picture_path(picture) %>
        <%# <%= link_to 'この画像を削除する', picture, method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        <div class="comments">
          <% picture.comments.each do |comment| %>
            <div class="comment">
              <span class="glyphicon glyphicon-hand-right"></span>
              <%= comment.text %>
            </div>
          <% end %>
          <%= render partial: '/comments/form', locals: {comment: picture.comments.build} %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>

